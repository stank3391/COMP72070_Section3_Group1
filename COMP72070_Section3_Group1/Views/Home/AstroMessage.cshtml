<!-- MY LOVELY STYLES -->
<style>
    body, html {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .side_bar {
        float: left;
        width: 20%;
        padding: 20px;
        background-color: #999;
        height: calc(100vh - 60px);
        overflow-y: auto;
    }

    .main_display {
        float: left;
        width: 75%;
        padding: 20px;
        background-color: #fff;
        height: calc(100vh - 60px);
        overflow-y: auto;
        border-left: 2px solid grey;
    }

    .convo_list {
        list-style-type: none;
        padding: 0;
    }

        .convo_list li {
            padding: 10px;
            margin-bottom: 8px;
            background-color: lightgrey;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .convo_list li:hover {
                background-color: white;
            }

    .chat_display {
        display: none;
    }

    .chat_input {
        display: none;
        margin-top: 10px;
        padding: 10px;
        align-items: center;
    }

    #messageInput {
        flex-grow: 1;
        margin-right: 10px; /* Spacing between input and button */
        padding: 10px;
        border-radius: 4px;
    }

    button {
        width: 80px;
        padding: 10px;
        background-color: rebeccapurple;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: deepskyblue;
        }

    .chat_display_area {
        display: none;
        width: 100%;
        height: 80%;
        border: ridge 2px purple;
        margin: 10px;
        padding: 10px;
        background-color: whitesmoke;
        border-radius: 4px;
        overflow-y: auto;
    }
</style>



<!-- DEMO scripts B-) -->
<script>
    // clicking on convo in side bar
    function selectConvo(convoId) {
        // Hide ALLL
        document.querySelectorAll('.chat_display').forEach(function (convo) {
            convo.style.display = 'none';
        });


        document.querySelectorAll('.chat_input').forEach(function (convo) {
            convo.style.display = 'flex';
        });
        document.querySelectorAll('.chat_display_area').forEach(function (convo) {
            convo.style.display = 'flex';
        });

        // Show selected conversation
        document.getElementById('convo' + convoId).style.display = 'block';
    }
</script>
