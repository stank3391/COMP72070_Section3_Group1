        <asp:Literal runat="server" id="txtValueA" EnableViewState="false" />
        <form asp-controller="Home" asp-action="SubmitPost" method="post" enctype="multipart/form-data">
            <textarea id="content" rows="12" cols="60" maxlength="256" name="content" placeholder="Write Here..."></textarea>
            <br></br>
            <input type="file" id="file" name="file">
            <button class="post-button" onclick="Showalert()">Post</button>
            <div id="counter">0</div>
        </form>

    </div>
</body>
</html>


