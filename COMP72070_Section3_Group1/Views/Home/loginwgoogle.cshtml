@{
    ViewData["Title"] = "loginwgoogle";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Form</title>
    <style>
        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            background-color: #363b48;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: white;
        }

        label {
            margin-bottom: 8px;
        }

        input {
            padding: 8px;
            margin-bottom: 16px;
            border: 1px solid #61dafb;
            border-radius: 4px;
            background-color: #282c34;
            color: white;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            background-color: #61dafb;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #4fa3d1;
            }
    </style>
</head>

<body>
    <form asp-controller="Start" asp-action="ExampleAccount" method="post">
        <label for="usernameText">Username:</label>
        <input type="text" id="usernameText" name="username" required />

        <label for="passwordText">Password:</label>
        <input type="password" id="passwordText" name="password" required />

        <button type="submit">Submit</button>
    </form>
</body>
</html>


